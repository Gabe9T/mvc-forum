@{
  Post post = Model["Post"];
  SelectList selectList = Model["SelectList"];
  string action = "Create";
  string buttonText = "Post";
  if (Model["Usage"] == "edit")
  {
    action = "Edit";
    buttonText = "Save Post";
  }
}

<form asp-controller="Post" asp-action=@action method="post">
    @if(action == "Edit")
  {
    <input asp-for="@post.PostId" type="hidden" />
  }
  <input asp-for="@post.Title" placeholder="Post Title"></input>
  <input asp-for="@post.Body" placeholder="Post Body"></input>
  <label>Posting in:</label>
  <select asp-for="@post.TopicId" asp-items=@selectList></select>
  <button class="btn btn-success" type="submit">@buttonText</button>
</form>
