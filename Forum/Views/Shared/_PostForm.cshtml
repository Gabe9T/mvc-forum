@{
  Post post = Model["Post"];
  string action = "Create";
  string buttonText = "Create";
  if (Model["Usage"] == "edit")
  {
    action = "Edit";
    buttonText = "Save Edits";
  }
}

<form asp-controller="Post" asp-action=@action method="post">
  @if(action == "Edit")
  {
    <input asp-for="@post.PostId" type="hidden" />
  }
  <div class="form-group mb-2">
  <label asp-for="@post.Body"></label>
  <input asp-for="@post.Body" placeholder="Post" ></input>
  </div>
  <input class="btn btn-primary" type="submit" value=@buttonText />
</form>
<hr />
@if(action == "Edit")
{
  <form asp-controller="Post" asp-action="Delete" asp-route-id=@post.PostId method="post">
    <input class="btn btn-danger" type="submit" value="Delete"></input>
  </form>
}
