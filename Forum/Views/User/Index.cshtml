@{
    Layout = "_Layout";
    ViewData["Title"] = "Users";
}

@using Forum.Models;

<h1>Users</h1>

@if (Model.Count == 0)
{
    <p>No Users Are Around D:</p>
    <h4>@Html.ActionLink("Add A New User!", "Create")</h4>
}
else
{
    @foreach (User user in Model)
    {
        <li>@Html.ActionLink($"{user.Username}", "Details", new { id = user.UserId })</li>
    }
    @Html.ActionLink("Add User", "Create", "User", null, new { @class = "btn btn-primary" })
<br />
    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-primary" })
}
